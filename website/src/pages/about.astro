---
import FeatureCarousel from '../components/islands/FeatureCarousel.tsx';
import SectionHeading from '../components/ui/SectionHeading.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const milestones = [
  { year: '2021', detail: 'First public alpha using Forge with 45 mods.' },
  { year: '2022', detail: 'Packwiz adoption and analyzer automation shipped.' },
  { year: '2023', detail: 'Switched to NeoForge 1.20, added cinematic shader bundle.' },
  { year: '2024', detail: 'Astro 5 promo site, Tailwind v4 theme, React 19 upgrades.' },
];

const winterPractices = [
  {
    title: 'Automation-first',
    summary: 'Scripts enforce packwiz locks, analyzer diffs, and export parity for every PR.',
    icon: '‚öôÔ∏è',
  },
  {
    title: 'A11y & performance',
    summary: 'Motion + Anime effects stay GPU friendly; configs are tuned for mid-tier rigs.',
    icon: '‚ôø',
  },
  {
    title: 'Community labs',
    summary: 'Seasonal playtests feed changelogs, with Discord votes deciding future biomes.',
    icon: 'üß™',
  },
];
---
<BaseLayout title="About Winterlands" description="Meet the team building the coziest snowbound adventures.">
  <section class="mx-auto max-w-6xl px-6 py-16">
    <SectionHeading
      eyebrow="Our Story"
      title="Hand-built for snowy nights"
      description="Winterlands started as a holiday realm and grew into a full-time lab focused on cinematic survival."
    />
    <div class="grid gap-10 lg:grid-cols-2">
      <div class="space-y-6">
        {milestones.map((item) => (
          <div class="flex gap-4">
            <div class="font-display text-3xl" style="color: var(--color-aurora)">{item.year}</div>
            <p class="text-white/70">{item.detail}</p>
          </div>
        ))}
      </div>
      <div class="rounded-3xl border border-white/10 bg-white/5 p-8">
        <h3 class="font-display text-3xl">Makers & Maintainers</h3>
        <p class="mt-3 text-white/70">
          Designers, datapack engineers, and shader tinkerers contribute from snowy cabins around the globe. We keep
          everything transparent in the monorepo so the community can remix with confidence.
        </p>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-6 pb-16">
    <SectionHeading eyebrow="Craft" title="Winter-proof Practices" />
    <FeatureCarousel client:visible features={winterPractices} />
  </section>
</BaseLayout>
