---
interface Props {
  eyebrow?: string;
  title: string;
  description?: string;
}

const { eyebrow, title, description } = Astro.props as Props;
---
<div class="mx-auto mb-10 max-w-3xl text-center">
  {eyebrow && <p class="text-sm uppercase tracking-[0.3em] text-white/60">{eyebrow}</p>}
  <h2 class="mt-2 font-display text-4xl text-glow">{title}</h2>
  {description && <p class="mt-3 text-base text-white/70">{description}</p>}
</div>
