---
import { navLinks, socials } from '../../lib/site';

interface Props {
  modrinthUrl: string;
  githubUrl: string;
}

const { modrinthUrl, githubUrl } = Astro.props as Props;
---
<div class="mx-auto mt-16 w-full max-w-6xl px-6 pb-12">
  <div class="rounded-3xl border border-white/5 bg-white/5/5 p-8 backdrop-blur">
    <div class="flex flex-col gap-8 md:flex-row md:items-center md:justify-between">
      <div>
        <p class="font-display text-2xl">See you in the snow.</p>
        <p class="text-sm text-white/70">NeoForge 1.21.1 · Packwiz managed · Winter ready</p>
      </div>
      <a
        href={modrinthUrl}
        class="glass-button inline-flex items-center gap-2 px-5 py-3 text-sm"
        target="_blank"
        rel="noreferrer noopener"
        data-no-swup
      >
        Download on Modrinth
      </a>
    </div>
    <div class="mt-8 grid gap-6 md:grid-cols-2">
      <div class="flex flex-wrap gap-4 text-sm text-white/70">
        {navLinks.map((link) => (
          <a href={link.href} class="hover:text-white" data-swup-preload>
            {link.label}
          </a>
        ))}
      </div>
      <div class="flex flex-wrap justify-end gap-4 text-sm text-white/70">
        {socials.map((item) => (
          <a href={item.href} target="_blank" rel="noreferrer" class="hover:text-white" data-no-swup>
            {item.label}
          </a>
        ))}
        <a href={githubUrl} class="hover:text-white" target="_blank" rel="noreferrer" data-no-swup>
          Issues
        </a>
      </div>
    </div>
    <p class="mt-6 text-xs text-white/60">© {new Date().getFullYear()} Winterlands Collective. Built with Astro 5.</p>
  </div>
</div>
