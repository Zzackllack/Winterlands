---
import { navLinks } from '../../lib/site';

interface Props {
  ctaHref: string;
}

const { ctaHref } = Astro.props as Props;
---
<div class="mx-auto flex w-full max-w-6xl items-center justify-between gap-6 px-6 py-8">
  <a href="/" class="flex items-center gap-3 text-lg font-semibold tracking-wide">
    <img src="/logo-winterlands.jpg" alt="Winterlands" class="h-12 w-12 rounded-2xl border border-white/20 object-cover" />
    <span class="font-display text-xl text-glow">Winterlands</span>
  </a>
  <nav class="hidden items-center gap-6 text-sm md:flex">
    {navLinks.map((link) => (
      <a href={link.href} class="text-white/80 transition hover:text-white" aria-label={`Go to ${link.label}`}>
        {link.label}
      </a>
    ))}
  </nav>
  <div class="flex items-center gap-3">
    <a href={ctaHref} class="modrinth-button" target="_blank" rel="noreferrer noopener">
      <img src="/modrinth.svg" alt="" class="modrinth-button__icon" />
      <span>Download on <span class="modrinth-button__accent">Modrinth</span></span>
    </a>
  </div>
</div>
